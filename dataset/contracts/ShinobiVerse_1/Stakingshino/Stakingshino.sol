    type: 2 - 6months
    type: 3 - 12months
    */ 

    function deposit(uint256 _amount, uint depositType) public {
        
        require(_amount > 0, "Can not transfer zero amount");
        require(_amount >= minAmount, "check your deposit amount");
        require(_amount <= maxAmount, "check your deposit amount");
        
        
        UserInfo[] storage user = userInfo[msg.sender];    
        
        
        SHINO.transferFrom(address(msg.sender), address(this), _amount);
        _tempuserinfo.amount = _amount;
        _tempuserinfo.depositTime = block.timestamp;
        _tempuserinfo.depositType = depositType;
        _tempuserinfo.nextHarvestUntil = 0;

        if(depositType == 0) {
            _tempuserinfo.lockedTime = block.timestamp + StakeTime_1.mul( 1 days );
            _tempuserinfo.rewardLockedUp = _tempuserinfo.amount.mul(apr_1).div(100).div( 1 days ).div(StakeTime_1);
        }
        
            
        if(depositType == 1) {
            _tempuserinfo.lockedTime = block.timestamp + StakeTime_2.mul( 1 days );
            _tempuserinfo.rewardLockedUp = _tempuserinfo.amount.mul(apr_3).div(100).div( 1 days ).div(StakeTime_2);
        }
            
        if(depositType == 2) {
            _tempuserinfo.lockedTime = block.timestamp + StakeTime_3.mul( 1 days );
            _tempuserinfo.rewardLockedUp = _tempuserinfo.amount.mul(apr_6).div(100).div( 1 days ).div(StakeTime_3);
        }
        
        if(depositType == 3) {
            _tempuserinfo.lockedTime = block.timestamp + StakeTime_4.mul( 1 days );
            _tempuserinfo.rewardLockedUp = _tempuserinfo.amount.mul(apr_12).div(100).div( 1 days ).div(StakeTime_4);
        }
        user.push(_tempuserinfo);
        totalvaluelock = totalvaluelock.add(_amount.div(10**9));
        staker += 1;

        emit Deposit(msg.sender, _amount);
    }
    
    // Withdraw Token
    function withdraw(uint256 _amount, uint _stakeID) public {
        
        UserInfo storage user = userInfo[msg.sender][_stakeID];
        require(_amount > 0, "Can not withdraw zero amount");
        require(user.amount >= _amount, "Invalid withdraw amount");
        uint256  tempamount = user.amount;
        require(tempamount > 0, "Can not find staked value");
        require(user.lockedTime < block.timestamp, "Wait for your staking period");
        user.amount = user.amount.sub(_amount);    
        user.rewardLockedUp = user.rewardLockedUp * user.amount / tempamount;
        totalvaluelock = totalvaluelock.sub(_amount.div(10**9));      
        emit Withdraw(msg.sender, _amount);
        
    }

    // View function to see if user can withdraw reward
    function canWithdraw(address _user, uint _stakeID) public view returns (bool) {
        UserInfo storage user = userInfo[_user][_stakeID];
        return (block.timestamp > user.lockedTime && user.amount > 0);
    }
    
    event pendingAmount(uint256);
     
    // Harvest
    function harvest(uint256 _pid, uint _stakeID) public {

        UserInfo storage user = userInfo[msg.sender][_stakeID];
        
        uint256 pending = 0;
        if(canHarvest(msg.sender, _stakeID)) {
            if(user.nextHarvestUntil == 0) {
                uint256 pendingDate = (block.timestamp - user.depositTime).div(intervaLTime).add(1);
                pending = pendingDate.mul(user.rewardLockedUp).mul(intervaLTime);
            } else {
                if(user.nextHarvestUntil < block.timestamp) {
                    uint256 pendingDate = (block.timestamp.sub(user.nextHarvestUntil)).div(intervaLTime).add(1);
                    pending = pendingDate.mul(user.rewardLockedUp).mul(intervaLTime);
                } 
            }
            emit pendingAmount(pending);
        }

        if (pending > 0) {

            user.nextHarvestUntil = block.timestamp.add(intervaLTime);      
            // send rewards
            safeRewards(msg.sender, pending, _pid);
        }

        if (user.nextHarvestUntil == 0) {
            user.nextHarvestUntil = block.timestamp.add(intervaLTime);
        }

        rewardclaimed += pending;

        if(user.depositType == 0) {
          user.rewardLockedUp = _tempuserinfo.amount.mul(apr_1).div(100).div( 1 days ).div(StakeTime_1);
        }
        
            
        if(user.depositType == 1) {
           user.rewardLockedUp = _tempuserinfo.amount.mul(apr_3).div(100).div( 1 days ).div(StakeTime_1);

        }
            
        if(user.depositType == 2) {
           user.rewardLockedUp = _tempuserinfo.amount.mul(apr_6).div(100).div( 1 days ).div(StakeTime_1);

        }
        
        if(user.depositType == 3) {
            user.rewardLockedUp = _tempuserinfo.amount.mul(apr_12).div(100).div( 1 days ).div(StakeTime_1);

        }
        
        emit Harvest(msg.sender, _pid, pending);
       
    }

    function harvestMultiple(uint256 _pid, uint256[] calldata stakeID) public{
       for(uint256 i = 0; i< stakeID.length; i++){
           harvest(_pid, stakeID[i]);
       }
    }
    
    // send reward
    function safeRewards(address _to, uint256 _amount, uint256 _pid) internal {
        
        uint256 rewardTokenBal = rewardTokenInfo[_pid].token.balanceOf(address(this)) - totalvaluelock;
        if (_amount > rewardTokenBal) {
            rewardTokenInfo[_pid].token.transfer(_to, rewardTokenBal);
        } else {
            rewardTokenInfo[_pid].token.transfer(_to, _amount);
        }

    }
    
    // View function to see if user can harvest reward
    function canHarvest(address _user, uint _stakeID) public view returns (bool) {
        UserInfo storage user = userInfo[_user][_stakeID];
        return block.timestamp >= user.nextHarvestUntil && block.timestamp < user.lockedTime;
    }
    
    // View function to see pending reward on frontend.
    function pendingToken(address _user, uint _stakeID) external view returns (uint256) {
        UserInfo storage user = userInfo[_user][_stakeID];
        uint256 pending = 0;
        if(canHarvest(_user, _stakeID)) {
            if(user.nextHarvestUntil == 0) {
                uint256 pendingDate = (block.timestamp - user.depositTime).div(intervaLTime).add(1);
                pending = pendingDate.mul(user.rewardLockedUp).mul(intervaLTime);
            } else {
                uint256 pendingDate = (block.timestamp - user.nextHarvestUntil).div(intervaLTime).add(1);
                pending = pendingDate.mul(user.rewardLockedUp).mul(intervaLTime);
            }
        }
        return pending;
    }
   
