    struct Land {
        uint128 rarity;
        uint128 created;
    }

    Land[] public lands;

    uint private noice = 0;

    function totalSupply() public view returns (uint256) {
        return lands.length;
    }

    function _randomInt(uint _mod) private returns (uint) {
        noice = noice.add(1);

        return uint(keccak256(abi.encodePacked(msg.sender, block.difficulty, block.timestamp, noice, totalSupply()))) % _mod;
    }

    function _createLand() internal returns (uint) {
        uint128 rarity = uint128(CHANCES_MAP[_randomInt(CHANCES_MAP.length)]);
        
        lands.push(Land(rarity, uint128(block.timestamp)));

        return lands.length - 1;
    }

    function tokenURI(uint _tokenId) public view virtual override returns (string memory) {
        require(_exists(_tokenId), "ERC721Metadata: URI query for nonexistent token");
        string memory baseURI = _baseURI();
        string memory landId = lands[_tokenId].rarity.toString();

        return string(abi.encodePacked(baseURI, landId));
    }

    function getLandRarity(uint _tokenId) external view returns (uint) {
        require(_exists(_tokenId));

        return lands[_tokenId].rarity;
    }

    function getLandCreated(uint _tokenId) external view returns (uint) {
        require(_exists(_tokenId));

        return lands[_tokenId].created;
    }

    function getLandsByOwner(address _owner) external view returns (uint[] memory) {
        uint[] memory _result = new uint[](balanceOf(_owner));
        uint _position = 0;

        for (uint _i = 0; _i < lands.length; _i++) {
            if (ownerOf(_i) == _owner) {
                _result[_position] = _i;
                _position++;
            }
        }

        return _result;
    }

