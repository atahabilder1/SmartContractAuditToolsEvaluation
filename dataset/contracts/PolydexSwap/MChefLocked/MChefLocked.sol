contract MChefLocked is OwnableUpgradeSafe {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // constants
    uint256 public constant BLOCKS_PER_DAY = 38000;

    // flags
    uint256 private _locked = 0;

    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many LP tokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        //
        // We do some fancy math here. Basically, any point in time, the amount of PLXs
        // entitled to a user but is pending to be distributed is:
        //
        //   pending reward = (user.amount * pool.accPlxPerShare) - user.rewardDebt
        //
        // Whenever a user deposits or withdraws LP tokens to a pool. Here's what happens:
        //   1. The pool's `accPlxPerShare` (and `lastRewardBlock`) gets updated.
        //   2. User receives the pending reward sent to his/her address.
        //   3. User's `amount` gets updated.
        //   4. User's `rewardDebt` gets updated.
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20 lpToken; // Address of LP token contract.
        uint256 allocPoint; // How many allocation points assigned to this pool. PLXs to distribute per block.
        uint256 lastRewardBlock; // Last block number that PLXs distribution occurs.
        uint256 accPlxPerShare; // Accumulated PLXs per share, times 1e18. See below.
        bool isStarted; // if lastRewardBlock has passed
        uint256 startBlock;
    }

    address public plx = address(0x7A5dc8A09c831251026302C93A778748dd48b4DF);
    address public locker = address(0xb92e099Be693679d14aEA143c62548Bb9e74A03f);

    uint256 public lockPercent;

    // PLX tokens created per block.
    uint256 public rewardPerBlock;

    // Info of each pool.
    PoolInfo[] public poolInfo;

    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;

    // Total allocation poitns. Must be the sum of all allocation points in all pools.
    uint256 public totalAllocPoint = 0;

    // The block number when PLX mining starts.
    uint256 public startBlock;

    address public rewardReferral;
    uint256 public commissionPercent;

    uint256 public nextHalvingBlock;
    uint256 public rewardHalvingRate;
    bool public halvingChecked;

    /* =================== Added variables (need to keep orders for proxy to work) =================== */
    // ...

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event RewardPaid(address indexed user, uint256 amount);
    event Commission(address indexed user, address indexed referrer, uint256 amount);

    modifier lock() {
        require(_locked == 0, "MChefLocked: LOCKED");
        _locked = 1;
        _;
        _locked = 0;
    }

    modifier checkHalving() {
        if (halvingChecked) {
            halvingChecked = false;
            while (block.number >= nextHalvingBlock) {
                massUpdatePools();
                rewardPerBlock = rewardPerBlock.mul(rewardHalvingRate).div(10000); // x97.5% (2.5% decreased every-week)
                nextHalvingBlock = nextHalvingBlock.add(BLOCKS_PER_DAY * 7);
            }
            halvingChecked = true;
        }
        _;
    }

    function initialize(
        address _plx,
        address _locker,
        uint256 _rewardPerBlock,
        uint256 _startBlock
    ) public initializer {
        OwnableUpgradeSafe.__Ownable_init();

        plx = _plx;
        locker = _locker;

        rewardPerBlock = _rewardPerBlock;
        startBlock = _startBlock;
        nextHalvingBlock = _startBlock.add(BLOCKS_PER_DAY * 7);

        lockPercent = 7000; // 70%
        commissionPercent = 100; // 1%
        rewardHalvingRate = 9750; // 97.5%
        halvingChecked = true;

        // staking pool
        poolInfo.push(PoolInfo({lpToken: IERC20(_plx), allocPoint: 0, lastRewardBlock: _startBlock, accPlxPerShare: 0, isStarted: false, startBlock: _startBlock}));
    }

    function resetStartBlock(uint256 _startBlock) external onlyOwner {
        require(startBlock > block.number && _startBlock > block.number, "late");
        startBlock = _startBlock;
        nextHalvingBlock = _startBlock.add(BLOCKS_PER_DAY * 7);
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    function startReleaseBlock() public view returns (uint256) {
        return ITokenLocker(locker).startReleaseBlock();
    }

    function endReleaseBlock() external view returns (uint256) {
        return ITokenLocker(locker).endReleaseBlock();
    }

    function setRewardPerBlock(uint256 _rewardPerBlock) external onlyOwner {
        require(_rewardPerBlock <= 0.1 ether, "insane high rate");
        massUpdatePools();
        rewardPerBlock = _rewardPerBlock;
    }

    function setHalvingChecked(bool _halvingChecked) external onlyOwner {
        halvingChecked = _halvingChecked;
    }

    function setLockPercent(uint256 _lockPercent) external onlyOwner {
        require(_lockPercent <= 9900, "exceed 99%");
        massUpdatePools();
        lockPercent = _lockPercent;
    }

    function setRewardReferral(address _rewardReferral) external onlyOwner {
        rewardReferral = _rewardReferral;
    }

    function setRewardHalvingRate(uint256 _rewardHalvingRate) external onlyOwner {
        require(_rewardHalvingRate >= 9000, "below 90%");
        massUpdatePools();
        rewardHalvingRate = _rewardHalvingRate;
    }

    function setCommissionPercent(uint256 _commissionPercent) external onlyOwner {
        require(_commissionPercent <= 200, "exceed 2%");
        commissionPercent = _commissionPercent;
    }

    function checkPoolDuplicate(IERC20 _lpToken) internal view {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            require(poolInfo[pid].lpToken != _lpToken, "add: existing pool?");
        }
    }

    // Add a new lp to the pool. Can only be called by the owner.
    function add(
        uint256 _allocPoint,
        IERC20 _lpToken,
        bool _withUpdate,
        uint256 _lastRewardBlock
    ) public onlyOwner {
        checkPoolDuplicate(_lpToken);
        if (_withUpdate) {
            massUpdatePools();
        }
        if (block.number < startBlock) {
            // chef is sleeping
            if (_lastRewardBlock == 0) {
                _lastRewardBlock = startBlock;
            } else {
                if (_lastRewardBlock < startBlock) {
                    _lastRewardBlock = startBlock;
                }
            }
        } else {
            // chef is cooking
            if (_lastRewardBlock == 0 || _lastRewardBlock < block.number) {
                _lastRewardBlock = block.number;
            }
        }
        bool _isStarted = (_lastRewardBlock <= startBlock) || (_lastRewardBlock <= block.number);
        poolInfo.push(PoolInfo({lpToken: _lpToken, allocPoint: _allocPoint, lastRewardBlock: _lastRewardBlock, accPlxPerShare: 0, isStarted: _isStarted, startBlock: _lastRewardBlock}));
        if (_isStarted) {
            totalAllocPoint = totalAllocPoint.add(_allocPoint);
        }
    }

    // Update the given pool's PLX allocation point. Can only be called by the owner.
    function set(uint256 _pid, uint256 _allocPoint) public onlyOwner {
        massUpdatePools();
        PoolInfo storage pool = poolInfo[_pid];
        if (pool.isStarted) {
            totalAllocPoint = totalAllocPoint.sub(pool.allocPoint).add(_allocPoint);
        }
        pool.allocPoint = _allocPoint;
    }

    // View function to see pending PLXs on frontend.
    function pendingReward(uint256 _pid, address _user) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accPlxPerShare = pool.accPlxPerShare;
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (block.number > pool.lastRewardBlock && lpSupply != 0) {
            uint256 _numBlocks = block.number.sub(pool.lastRewardBlock);
            if (totalAllocPoint > 0) {
                uint256 _plxReward = _numBlocks.mul(rewardPerBlock).mul(pool.allocPoint).div(totalAllocPoint);
                accPlxPerShare = accPlxPerShare.add(_plxReward.mul(1e18).div(lpSupply));
            }
        }
        return user.amount.mul(accPlxPerShare).div(1e18).sub(user.rewardDebt);
    }

    // Update reward variables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (lpSupply == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }
        if (!pool.isStarted) {
            pool.isStarted = true;
            totalAllocPoint = totalAllocPoint.add(pool.allocPoint);
        }
        if (totalAllocPoint > 0) {
            uint256 _numBlocks = block.number.sub(pool.lastRewardBlock);
            uint256 _plxReward = _numBlocks.mul(rewardPerBlock).mul(pool.allocPoint).div(totalAllocPoint);
            pool.accPlxPerShare = pool.accPlxPerShare.add(_plxReward.mul(1e18).div(lpSupply));
        }
        pool.lastRewardBlock = block.number;
    }

    function _harvestReward(uint256 _pid, address _account) internal {
        UserInfo storage user = userInfo[_pid][_account];
        if (user.amount > 0) {
            PoolInfo storage pool = poolInfo[_pid];
            uint256 _claimableAmount = user.amount.mul(pool.accPlxPerShare).div(1e18).sub(user.rewardDebt);
            if (_claimableAmount > 0) {
                _safePlxMint(address(this), _claimableAmount);
                emit RewardPaid(_account, _claimableAmount);

                uint256 _commission = _claimableAmount.mul(commissionPercent).div(10000); // 1%
                _sendCommission(msg.sender, _commission);
                _claimableAmount = _claimableAmount.sub(_commission);

                if (block.number < startReleaseBlock()) {
                    uint256 _lockAmount = _claimableAmount.mul(lockPercent).div(10000);
                    _claimableAmount = _claimableAmount.sub(_lockAmount);
                    IERC20(plx).safeIncreaseAllowance(address(locker), _lockAmount);
                    ITokenLocker(locker).lock(_account, _lockAmount);
                }

                _safePlxTransfer(_account, _claimableAmount);
            }
        }
    }

    function _sendCommission(address _account, uint256 _commission) internal {
        address _referrer = address(0);
        if (rewardReferral != address(0)) {
            _referrer = IReferral(rewardReferral).refOf(_account);
        }
        if (_referrer != address(0)) {
            // send commission to referrer
            _safePlxTransfer(_referrer, _commission);
            emit Commission(_account, _referrer, _commission);
        } else {
            // or burn
            _safePlxBurn(_commission);
            emit Commission(_account, address(0), _commission);
        }
    }

    function deposit(uint256 _pid, uint256 _amount) public {
        depositWithRef(_pid, _amount, address(0));
    }

    function depositWithRef(
        uint256 _pid,
        uint256 _amount,
        address _referrer
    ) public lock checkHalving {
        address _sender = msg.sender;
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_sender];
        updatePool(_pid);
        if (rewardReferral != address(0) && _referrer != address(0)) {
            IReferral(rewardReferral).set(_referrer, _sender);
        }
        if (user.amount > 0) {
            _harvestReward(_pid, msg.sender);
        }
        if (_amount > 0) {
            pool.lpToken.safeTransferFrom(_sender, address(this), _amount);
            user.amount = user.amount.add(_amount);
        }
        user.rewardDebt = user.amount.mul(pool.accPlxPerShare).div(1e18);
        emit Deposit(_sender, _pid, _amount);
    }

    // Withdraw LP tokens from BearnChef.
    function withdraw(uint256 _pid, uint256 _amount) public lock checkHalving {
        address _sender = msg.sender;
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_sender];
        require(user.amount >= _amount, "withdraw: not good");
        updatePool(_pid);
        if (user.amount > 0) {
            _harvestReward(_pid, msg.sender);
        }
        if (_amount > 0) {
            user.amount = user.amount.sub(_amount);
            pool.lpToken.safeTransfer(_sender, _amount);
        }
        user.rewardDebt = user.amount.mul(pool.accPlxPerShare).div(1e18);
        emit Withdraw(_sender, _pid, _amount);
    }

    function withdrawAll(uint256 _pid) external {
        withdraw(_pid, userInfo[_pid][msg.sender].amount);
    }

    function harvestAllRewards() external {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            if (userInfo[pid][msg.sender].amount > 0) {
                withdraw(pid, 0);
            }
        }
    }

    function enterStaking(uint256 _amount) external {
        deposit(0, _amount);
    }

    function enterStakingWithRef(uint256 _amount, address _referrer) external {
        depositWithRef(0, _amount, _referrer);
    }

    function leaveStaking(uint256 _amount) external {
        withdraw(0, _amount);
    }

    function _safePlxTransfer(address _to, uint256 _amount) internal {
        uint256 _plxBal = IERC20(plx).balanceOf(address(this));
        if (_plxBal > 0) {
            if (_amount > _plxBal) {
                IERC20(plx).safeTransfer(_to, _plxBal);
            } else {
                IERC20(plx).safeTransfer(_to, _amount);
            }
        }
    }

    function _safePlxMint(address _to, uint256 _amount) internal {
        address _plx = plx;
        if (ICappedMintableBurnableERC20(_plx).minter(address(this)) && _to != address(0)) {
            uint256 _totalSupply = IERC20(_plx).totalSupply();
            uint256 _cap = ICappedMintableBurnableERC20(_plx).cap();
            uint256 _mintAmount = (_totalSupply.add(_amount) <= _cap) ? _amount : _cap.sub(_totalSupply);
            if (_mintAmount > 0) {
                ICappedMintableBurnableERC20(_plx).mint(_to, _mintAmount);
            }
        }
    }

    function _safePlxBurn(uint256 _amount) internal {
        uint256 _plxBal = IERC20(plx).balanceOf(address(this));
        if (_plxBal > 0) {
            if (_amount > _plxBal) {
                ICappedMintableBurnableERC20(plx).burn(_plxBal);
            } else {
                ICappedMintableBurnableERC20(plx).burn(_amount);
            }
        }
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) external lock checkHalving {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        pool.lpToken.safeTransfer(address(msg.sender), user.amount);
        emit EmergencyWithdraw(msg.sender, _pid, user.amount);
        user.amount = 0;
        user.rewardDebt = 0;
    }

    // This function allows governance to take unsupported tokens out of the contract. This is in an effort to make someone whole, should they seriously mess up.
    // There is no guarantee governance will vote to return these. It also allows for removal of airdropped tokens.
    function governanceRecoverUnsupported(
        IERC20 _token,
        uint256 amount,
        address to
    ) external onlyOwner {
        if (block.number < startBlock + BLOCKS_PER_DAY * 600) {
            // do not allow to drain lpToken if less than 600 days
            uint256 length = poolInfo.length;
            for (uint256 pid = 0; pid < length; ++pid) {
                PoolInfo storage pool = poolInfo[pid];
                require(_token != pool.lpToken, "pool.lpToken");
            }
        }
        _token.safeTransfer(to, amount);
    }
}
