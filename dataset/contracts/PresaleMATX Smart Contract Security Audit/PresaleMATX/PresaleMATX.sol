contract PresaleMATX is Ownable {
    using SafeMath for uint;
    
    event swap( address indexed _buyer, uint _valueMATX, uint _valueBNB);
    
    uint256 public MATXPrice = 20000000e18; // 1 BNB == 20000000 MATX;
    uint256 public BNBLimit = 10e18;
    
    uint public _minimumIvestment = 0.01e18; // 0 BNB.
    
    IBEP20 public MATX = IBEP20(0xebdDE907c6D8E38f8A12C456D73948C56d784619);
    
    mapping(address => uint256) public vault;
    
    uint256 public totalSoldBNB = 0;
    uint256 public totalSoldMATX=0;
    
    function swapBNBForMATXToken() external payable {
        require(!isContract(_msgSender()),"swapBNBForMATXToken :: Caller must not contract address");
        require(msg.value >= _minimumIvestment, "swapBNBForMATXToken :: wallet can swap only 1 BNB at a time");
        require(vault[_msgSender()].add(msg.value) <= BNBLimit, "swapBNBForMATXToken :: A vault can buy only using 5 BNB");
        
        uint _MATXprice = MATXPrice.mul(msg.value).div(1e18);
        
        require(MATX.transfer(msg.sender, _MATXprice),"swapBNBForMATXToken :: MATX transfer failed");
        vault[_msgSender()] = vault[_msgSender()].add(msg.value);
        
        address _ownerAddress = owner();
        payable(_ownerAddress).transfer(msg.value);
        
        totalSoldBNB = totalSoldBNB.add(msg.value);
        totalSoldMATX= totalSoldMATX.add(_MATXprice);
        
        emit swap( _msgSender(), _MATXprice, msg.value);
    }
    
    function updatePrce( uint _MATXPrice) external onlyOwner {
        MATXPrice = _MATXPrice;
    }
    
    function updateBNBLimit( uint _BNBLimit) external onlyOwner {
        BNBLimit = _BNBLimit;
    }
    
    function updateMinimumInvestment( uint minimumInvestment) public onlyOwner {
        _minimumIvestment = minimumInvestment;
    }
    
    function getPrice(uint amountIn) public view returns (uint) {
        return MATXPrice.mul(amountIn).div(1e18);
    }
    
    function failSafe( uint _amount) public onlyOwner {
        require(MATX.balanceOf(address(this)) >= _amount, "failSafe :: insufficient amount");
        MATX.transfer(_msgSender(),_amount);
    }
    
    function failSafeBNB( uint _amount) public onlyOwner {
        address _contract = address(this);
        require(_contract.balance >= _amount,"insufficient amount");
        msg.sender.transfer(_amount);
    }
 
    function isContract(address account) internal view returns (bool) {
        // According to EIP-1052, 0x0 is the value returned for not-yet created accounts
        // and 0xc5d2460186f7233c927e7db2dcc703c0e500b653ca82273b7bfad8045d85a470 is returned
        // for accounts without code, i.e. `keccak256('')`
        bytes32 codehash;
        bytes32 accountHash = 0xc5d2460186f7233c927e7db2dcc703c0e500b653ca82273b7bfad8045d85a470;
        // solhint-disable-next-line no-inline-assembly
        assembly {
            codehash := extcodehash(account)
        }
        return (codehash != accountHash && codehash != 0x0);
    }   
}